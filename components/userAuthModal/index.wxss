/* 手机授权modal背景 */
.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 9999;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
}

.modal-dialog {
    border-radius: 5px;
    overflow: hidden;
    background-color: #fff;
    width: 570rpx;
    box-sizing: border-box;
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    color: #333;
    font-size: 28rpx;
    text-align: center;
    z-index: 10000;
}

.modal-body {
    padding: 40rpx;
    font-size: 35rpx;
}

.modal-footer {
    display: flex;
    border-top: 1rpx solid #ddd;
}


.modal-footer > button {
    background-color: #fff;
    width: 50%;
    font-size: 30rpx;
    border-radius: 0;
}

.modal-footer > button.confirm {
    color: #44bf3b;
    border-left: 1rpx solid #ddd;
}