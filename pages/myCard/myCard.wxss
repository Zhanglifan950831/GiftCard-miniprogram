page {
    background-color: #f7f7f7;
}

.tab {
    border-top: 1rpx solid #ccc;
    background-color: #f7f7f7;
    padding-bottom: 20rpx;
}
.tab-content {
    height: 80rpx;
    background-color: #fff;
    display: flex;
    color: #333;
    font-size: 28rpx;
    border-bottom: 1rpx solid #e7e7e7;
}

.tab-content > view {
    width: 50%;
    text-align: center;
    line-height: 80rpx;
}

.tab-content text {
    height: 80rpx;
    box-sizing: border-box;
    display: inline-block;
    padding: 0 30rpx;
}

.tab-content text.chosen {
    color: #44bf3b;
    border-bottom: 2rpx solid #44bf3b;
}


.aviable-content, .history-content {
    background-color: #fff;
    min-height: 1080rpx;
}

.history-content {
    margin-bottom: 110rpx;
}

.amount-info {
    /*border-top: 1rpx solid #ccc;*/
    position: relative;
}

.amount-info .amount-content {
    width: 80%;
    margin:0 auto;
    padding: 40rpx 0;
    border-bottom: 1rpx solid #dbdbdb;
    text-align: center;
    color: #44bf3b;
    font-size: 30rpx;
}

.amount-info .amount-content .fee-info {
    font-size: 40rpx;
    margin-top: 26rpx;
}

.amount-info .amount-content .count {
    color: #9C9C9C;
    position: absolute;
    padding: 20rpx;
    background-color: #fff;
    left: 50%;
    transform: translateX(-50%);
}

.amount-info .pay-code {
    position: absolute;
    width: 140rpx;
    height: 60rpx;
    right: 0;
    top: 40rpx;
}

.amount-info .pay-code image {
    width: 100%;
    height: 100%;
}

.card-container {
    padding: 40rpx;
    position: relative;
    margin-bottom: 120rpx;
}

.card-container .card-content {
    border-radius: 20rpx;
    overflow: hidden;
    /*box-shadow: 0 10rpx 15rpx #999;*/
}

.card-container .card-item {
    height: 300rpx;
    overflow: hidden;
    position: relative;
    /*border-radius: 20rpx 20rpx 0 0;*/
    border-radius: 20rpx;
    border: 1rpx solid #dbdbdb;
    padding: 20rpx;
}

.card-container .card-item:not(:first-child) {
    margin-top: 20rpx;
    /*box-shadow: 0 -10rpx 30rpx rgba(0,0,0,.35);*/
}

.card-container .card-item:last-child {
    /*border-radius: 20rpx;*/
}

.card-container .card-item.chosen {
    height: 300rpx;
}

.card-container .pic {
    height: 240rpx;
    overflow: hidden;
    border-radius: 20rpx;
    position: relative;
}

.card-container .card-item image {
    width: 100%;
    height: 400rpx;
}

.card-item .face-info {
    width: 118rpx;
    height: 80rpx;
    border-radius:0 0 16rpx 16rpx;
    font-size: 28rpx;
    color: #333;
    text-align: right;
    padding-right: 20rpx;
    background-color: rgba(255,255,255,.75);
    position: absolute;
    top: 0;
    right: 20rpx;
} 

.card-item .operate {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 80rpx;
    box-sizing: border-box;
    padding: 22rpx 30rpx;
    display: flex;
    background-color: #fff;
}

.card-item  .operate > view{
    background-color: #fff;
    color: #44bf3b;
    width: 48%;
    height: 60rpx;
    font-size: 28rpx;
    border-radius: 40rpx; 
}

.card-item  .operate > view:first-child {
    margin-right: 20rpx;
    color: #333;
}

.card-item  .operate > view:last-child {
    text-align: right;
}

.card-item  .operate > view:last-child > text {
    padding-left: 20rpx;
    display: inline-block;
}

.card-item  .operate > view:last-child > text:first-child {
    padding-right: 20rpx;
    border-right: 2rpx solid #44bf3b;
}

.history-enrty {
    padding-right: 40rpx;
    color: #999;
    font-size: 28rpx;
    text-align: right;
}

.barcode-box {
    border-bottom: 3rpx dashed #d8d8d8;
    padding: 30rpx 0;
}

.barcode {
    width: 100%;
    height: 100rpx;
}
.barcode image {
    width: 100%;
    height: 100%;
}

.payCode {
    position: relative;
}

.icon-eye {
    width: 32rpx;
    height: 20rpx;
    position: absolute;
    right: 15rpx;
    top: 0;
}

.icon-eye > image {
    width: 100%;
    height: 100%;
}


.qrcode {
    margin: 0 auto;
}

.qrcode image {
    width: 100%;
    height: 100%;
}

.balance-info {
}

.history-item {
    height: 180rpx;
    border-bottom: 1px solid #dedede;
    display: flex;
    padding: 20rpx;
    box-sizing: border-box;
    position: relative;
}

.history-item .pic {
    width: 35%;
    overflow: hidden;
    border-radius: 10rpx;
}

.history-item .pic image {
    width: 100%;
    height: 100%;
}

.history-item .info {
    width: 65%;
    padding: 0 20rpx;
    font-size: 26rpx;
    color: #999;
}

.history-item .info .card-title {
    font-size: 28rpx;
}

.history-item .info .card-state{
    margin-top: 10rpx;
}

.history-item .info .card-state text {
    margin-left: 20rpx;
}

.history-item .info .date-info {
    margin-top: 25rpx;
}

.history-item .status-info {
    color: #333;
    font-size: 30rpx;
    position: absolute;
    right: 20rpx;
    top: 50%;
    transform: translateY(-50%);
}

.no_data {
    width: 162rpx;
    height: 162rpx;
    color: #999;
    font-size: 30rpx;
    text-align: center;
    margin: 200rpx auto 0;
}

.no_data > image {
    width: 100%;
    height: 100%;    
}

.no_data text {
    display: inline-block;
    margin-top: 15rpx;
}