.card-poster {
    padding: 20rpx 40rpx;
    border-top: 1rpx solid #dbdbdb;
}

.card-poster image {
    height: 400rpx;
    width: 100%;
    border-radius: 20rpx;
}

.dedication {
}

.dedication > .info{
    border-left: 10rpx solid #44bf3b;
    display: flex;
    padding: 10rpx 40rpx;
    padding-left: 20rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-weight: bold;
    color: #333;
    font-size: 30rpx;
}

.card-info {
    width: 60%;
}

.card-info text {
    padding: 0 10rpx;
}

.giveCard-count {
    /*width: 35%;*/
    width: 40%;
    display: flex;
}

.giveCard-count input {
    width: 128rpx;
    text-align: center;
    border-bottom: 1rpx solid #000;
}

.dedication-content {
    padding: 20rpx 40rpx;
    position: relative;
    font-size: 30rpx;
    color: #333;
}

.dedication-content span {
    position: absolute;
    left: 40rpx;
    top: 35rpx;
    z-index: 1;
}

.dedication textarea {
    width: 100%;
    height: 400rpx;
    background: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAArMAAABGAgMAAACiSfQLAAAACVBMVEX////Y2Nj19fXNSjChAAAAPElEQVRo3u3OsQkAIQAEwW/yHjEytSBLsE9rEDQQZoKN9wMAAAAAAAAAAAAAYFcyU8+ljPT8l9Ieu33KAt4/igmGPNT+AAAAAElFTkSuQmCC);
    background-size: 90%;
    box-sizing: border-box;
    font-size: 30rpx !important;
    line-height: 60rpx !important;
}

.btn-sendCard {
    padding: 20rpx 40rpx;
    position:fixed;
    width:90%;
    bottom: 20rpx
}

.btn-sendCard button {
    border: 0;
    background-color: #44bf3b;
    color: #fff;
    text-align: center;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 80rpx;
    font-size: 35rpx;
}

.share-modal {
    border-radius: 5px;
    overflow: hidden;
    background-color: #fff;
    width: 570rpx;
    box-sizing: border-box;
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    color: #333;
    font-size: 28rpx;
    text-align: center;
    z-index: 10000;
}

.modal-body {
    padding: 40rpx;
    font-size: 35rpx;
}

.modal-footer {
    border-top: 1rpx solid #ddd;
    display: flex;
}

.modal-footer > button {
    background-color: #fff;
    width: 50%;
    font-size: 30rpx;
    border-radius: 0;
}

.modal-footer > button.confirm {
    color: #44bf3b;
    border-left: 1rpx solid #ddd;
}