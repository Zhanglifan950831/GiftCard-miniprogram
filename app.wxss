/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  /*align-items: center;*/
  justify-content: space-between;
  /*padding: 200rpx 0;*/
  box-sizing: border-box;
} 

/** 隐藏显示（占位） */
.hidden {
    visibility: hidden !important;
}

button {
  border:none;
}

button::after{
  border:none;
}


/** 遮罩 */
.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

.layer-box {
    border-radius: 20rpx;
    background-color: #fff;
    width: 570rpx;
    /*height: 666rpx;*/
    box-sizing: border-box;
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    padding: 30rpx 80rpx;
    color: #333;
    font-size: 28rpx;
    text-align: center;
    z-index: 10000;
}

.footer {
    margin: 20rpx 40rpx 30rpx;
    background-color: #fff;
    display: flex;
    border-radius: 100rpx;
    border: 2rpx solid #44bf3b;
    height: 80rpx;
    line-height: 80rpx;
    overflow: hidden;
    box-shadow: 0 0 30rpx rgba(0,0,0,.25);
    position: fixed;
    bottom: 0;
    width: 90%;
}

.footer > button {
  width: 50%;
  line-height: 80rpx;
  border-radius: 0;
  border: none;
  padding: 0;
  font-size: 35rpx;
  background-color: #fff;
}

.footer > view {
    width: 50%;
    text-align: center;
}

.footer > .active {
    background-color: #44bf3b;
    color: #fff !important;
}

.footer > .myCard, .footer > .buyCard {
    color: #44bf3b;
}